<div class="artwork_container" style="top: <%= artwork.vertical %>px; left: <%= artwork.horizontal %>px;">
  <%= image_tag artwork.image, class: "artwork" %>
</div>
<% if user_signed_in? && current_user.id == @gallery.user_id %>
  <%= link_to 'Edit', edit_gallery_room_artwork_path(@gallery.id, @room.id, artwork.id) %>
  <%= link_to 'Delete', gallery_room_artwork_path(@gallery.id, @room.id, artwork.id), method: :delete %>
<% end %>
