<script src="https://aframe.io/releases/1.0.4/aframe.min.js"></script>
<script src="https://unpkg.com/aframe-html-shader@0.2.0/dist/aframe-html-shader.min.js"></script>

<a-scene>
  <a-plane position="0 0 -4" rotation="-90 0 0" width="10" height="10" color="#7BC8A4"></a-plane>

  <%# <a-plane position="0 10 -20" rotation="0 20 0" width="20" height="12" material="shader:html; target: #hoge;"></a-plane> %>

  <% @artworks.each do |artwork| %>
    <a-assets>
      <%= image_tag artwork.image, class: "gallery_card_image", id: "artwork#{artwork.id}" %>
    </a-assets>
    <a-image src="#artwork<%= artwork.id %>" position="<%= artwork.horizontal/50-5 %> <%= -artwork.vertical/50+10 %> -20" rotation="0 0 0" width="<%= artwork.size/50 %>" height="<%= artwork.size/50 %>"></a-image>
  <% end %>

  <%# <a-plane position="0 10 -20" rotation="0 20 0" width="20" height="12" src="#sky;" stereo-texture></a-plane> %>

  <a-assets>
    <%= image_tag 'no_image.png', class: "gallery_card_image", id: "sky" %>
  </a-assets>
  <a-sky src="#sky"></a-sky>
</a-scene>
