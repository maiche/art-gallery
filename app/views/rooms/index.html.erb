<script src="https://aframe.io/releases/1.0.4/aframe.min.js"></script>
<script src="https://unpkg.com/aframe-html-shader@0.2.0/dist/aframe-html-shader.min.js"></script>

<a-scene>

  <% @artworks.each do |artwork| %>
    <a-assets>
      <%= image_tag artwork.image, class: "gallery_card_image", id: "artwork#{artwork.id}" %>
    </a-assets>
    <a-image src="#artwork<%= artwork.id %>" position="<%= artwork.horizontal/50-5 %> <%= -artwork.vertical/50+10 %> -20" rotation="0 0 0" width="<%= artwork.size*0.03 %>" height="<%= artwork.size*0.03 %>"></a-image>
  <% end %>

  <a-assets>
    <%= image_tag 'room.png', class: "gallery_card_image", id: "sky" %>
  </a-assets>
  <a-sky src="#sky" rotation="0 -100 0"></a-sky>
</a-scene>
