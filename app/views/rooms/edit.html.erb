<div class="navbar">
  <div class="nav_left">
    <div class="nav_title link_parent">
      Art Gallery
      <%= link_to '', root_path, class:"link_child" %>
    </div>
  </div>
  <div class="nav_right">
    <div class="nav_menu link_parent">+ New gallery<%= link_to '', new_gallery_path, class:"link_child" %></div>
    <div class="nav_menu link_parent"><%= current_user.name %><%= link_to '', user_path(current_user.id), class:"link_child" %></div>
    <div class="nav_menu link_parent">Sign out<%= link_to '', destroy_user_session_path, method: :delete, class:"link_child" %></div>
  </div>
</div>

<%= link_to 'Back', gallery_path(@gallery.id) %>

<h2>Edit room</h2>

<h3>Artworks</h3>
<%= render partial: 'artwork_list', collection: @artworks %>

<div>
  <%= link_to 'Add new artworks', new_gallery_room_artwork_path(@gallery.id, @room.id) %>
</div>

<h3>Room preview</h3>

<%= form_with url: gallery_room_path(@gallery.id, @room.id), method: :put, id: "form" do |form| %>
  <%= form.submit 'done' , id: "position_btn" %>
<% end %>

<div id="data" data-gallery="<%= @gallery.id %>" data-room="<%= @room.id %>" class="save_message"></div>

<div class="exhibition_room">
  <%= render partial: 'artwork', collection: @artworks %>
</div>
