<%= render partial: 'shared/header' %>

<div class="back_btn link_parent">
  ‚Üê Back
  <%= link_to '', root_path, class: "link_child" %>
</div>

<div class="edit_form_body">
  <div class="edit_form">
    <h2 class="edit_title">Edit profile</h2>

    <%= form_with(model: @user, local: true) do |f| %>
      <div>
        <%= f.label :profile, class: "edit_label" %><br />
        <%= f.text_area :profile, class: "edit_input" %>
      </div>
      <div>
        <%= f.submit "Submit", class: "submit_btn" %>
      </div>
    <% end %>
  </div>
</div>
